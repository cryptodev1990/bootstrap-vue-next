{
  "name": "bootstrap-vue-3",
  "displayName": "BootstrapVue3",
  "description": "Early (but lovely) implementation of Vue 3, Bootstrap 5 and Typescript",
  "version": "0.0.4",
  "license": "MIT",
  "main": "dist/bootstrap-vue-3.umd.js",
  "module": "./dist/bootstrap-vue-3.es.js",
  "files": [
    "dist",
    "src"
  ],
  "private": false,
  "scripts": {
    "audit": "improved-yarn-audit --ignore-dev-deps --min-severity moderate",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "format": "prettier . --write",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "./scripts/deploy.sh",
    "test": "yarn run test:lint && yarn run test:unit",
    "test:lint": "yarn run lint",
    "test:unit": "jest",
    "prepare": "husky install && vite build"
  },
  "types": "src/BootstrapVue.d.ts",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "core-js": "^3.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/bootstrap": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-vue": "1.9.3",
    "@vue/compiler-sfc": "^3.2.20",
    "@vue/eslint-config-typescript": "^8.0.0",
    "@vue/test-utils": "^2.0.0-rc.16",
    "babel-jest": "^27.2.5",
    "babel-loader": "^8.2.2",
    "bootstrap-icons": "^1.6.0",
    "esbuild-loader": "^2.16.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-vue": "^7.19.1",
    "husky": "^7.0.2",
    "improved-yarn-audit": "^3.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "sass": "^1.42.1",
    "sass-loader": "^12.2.0",
    "style-loader": "^3.3.0",
    "ts-jest": "^27.0.5",
    "typescript": "~4.4.4",
    "vite": "2.6.7",
    "vue": "^3.2.20",
    "vue-loader": "^15.9.8",
    "vue3-jest": "^27.0.0-alpha.2",
    "vuepress-vite": "^2.0.0-beta.26"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdmoro/bootstrap-vue-3.git"
  },
  "bugs": {
    "url": "https://github.com/cdmoro/bootstrap-vue-3/issues"
  },
  "homepage": "https://github.com/cdmoro/bootstrap-vue-3",
  "keywords": [
    "bootstrap",
    "components",
    "typescript",
    "vue",
    "component-library",
    "bootstrapvue",
    "vue3"
  ],
  "jest": {
    "moduleNameMapper": {
      "@(.*)$": "<rootDir>/src/$1"
    }
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  }
}
